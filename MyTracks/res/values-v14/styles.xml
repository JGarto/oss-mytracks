<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- The style for choose activity text -->
  <style name="BottomButton" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
    <!-- Same as BottomButton in values/styles.xml except inheriting from a parent -->
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:maxLines">2</item>
  </style>
  <style name="BottomButtonBar" parent="@android:style/DeviceDefault.ButtonBar">
    <!-- Same as BottomButtonBar in values/styles.xml except inheriting from a parent and adding measureWithLargestChild -->
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:measureWithLargestChild">true</item>
  </style>
  <style name="TextChooseActivity"> 
    <!-- Same as TextChooseActivity in values/styles.xml except removing textSize and using textAppearance -->
    <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
  </style>
  <!-- The style for large size text -->
  <style name="TextLarge" parent="@android:style/TextAppearance.DeviceDefault.Large">
    <!-- same as TextLarge in values/styles.xml except inheriting from a parent instead of specifying textSize -->
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  <!-- The style for medium size text -->
  <style name="TextMedium" parent="@android:style/TextAppearance.DeviceDefault.Medium">
    <!-- same as TextMedium in values/styles.xml except inheriting from a parent instead of specifying textSize -->
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  <!-- The style for small size text -->
  <style name="TextSmall" parent="@android:style/TextAppearance.DeviceDefault.Small">
    <!-- same as TextSmall in values/styles.xml except inheriting from a parent instead of specifying textSize -->
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  <style name="TrackWidgetLabel">
    <!-- same as TrackWidgetLabel in values/styles.xml except adding textAllCaps -->
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/stats_large_label</item>
    <item name="android:textSize">10dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
  </style>
</resources>